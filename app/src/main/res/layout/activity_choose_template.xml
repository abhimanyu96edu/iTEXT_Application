<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abhimanyusharma.resumetemplatesapplication.ChooseTemplateActivity">

    <LinearLayout
        android:id="@+id/l"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.176">

        <at.markushi.ui.CircleButton
            android:id="@+id/preview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_insert_drive_file_white_24dp"
            app:cb_color="@color/colorPrimary"
            app:cb_pressedRingWidth="4dip"
            tools:layout_editor_absoluteX="280dp"
            tools:layout_editor_absoluteY="114dp" />

        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Default Template"
            android:textAlignment="center"
            android:textSize="20sp" />

        <at.markushi.ui.CircleButton
            android:id="@+id/template"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:src="@mipmap/ic_done_white_24dp"
            app:cb_color="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.914"
            app:layout_constraintLeft_toLeftOf="@+id/cross"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.183" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/l"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <at.markushi.ui.CircleButton
            android:id="@+id/preview1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_insert_drive_file_white_24dp"
            app:cb_color="@color/button"
            app:cb_pressedRingWidth="4dip"
            tools:layout_editor_absoluteX="280dp"
            tools:layout_editor_absoluteY="114dp" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Template 1"
            android:textAlignment="center"
            android:textSize="20sp" />

        <at.markushi.ui.CircleButton
            android:id="@+id/template1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:src="@mipmap/ic_done_white_24dp"
            app:cb_color="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.914"
            app:layout_constraintLeft_toLeftOf="@+id/cross"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.183" />

    </LinearLayout>
<LinearLayout
        android:id="@+id/l2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/l1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <at.markushi.ui.CircleButton
            android:id="@+id/preview2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_insert_drive_file_white_24dp"
            app:cb_color="@color/button"
            app:cb_pressedRingWidth="4dip"
            tools:layout_editor_absoluteX="280dp"
            tools:layout_editor_absoluteY="114dp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Template 2"
            android:textAlignment="center"
            android:textSize="20sp" />

        <at.markushi.ui.CircleButton
            android:id="@+id/template2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:src="@mipmap/ic_done_white_24dp"
            app:cb_color="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.914"
            app:layout_constraintLeft_toLeftOf="@+id/cross"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.183" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
